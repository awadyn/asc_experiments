#!/usr/bin/env Rscript

# read matrix from stdin
X <- read.table(file("stdin"))

# report matrix dimensionality
dim(X)

# set name of output image
png(
  "cdf.png",
  width     = 1.5,
  height    = 1.5,
  units     = "in",
  res       = 1200,
  pointsize = 2
)

# set margins
par(mar=c(5, 5, 2, 1))

# do the plot layout
plot(rev(X$V1),
     type='h',
     col='blue',
     log='y',
     main=expression("Probability of unique vector differences"~Delta),
     xlab=expression("{"~Delta==x^{(t)}-x^{(t-1)}~"}"),
     ylab=expression(p(Delta)))

# add reference lines
abline(10/100, 0, untf=1, col="green")
abline(1/100, 0, untf=1, col="orange")

# write plot to the output file
null <- dev.off()
